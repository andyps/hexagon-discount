{
    "name": "andyps/hexagon-discount",
    "description": "A simple hexagon example",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrii Pashentsev",
            "email": "avp200681@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-sqlite3": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Ports\\": "Ports/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --display-warnings",
        "cs": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf -p"
    }
}
